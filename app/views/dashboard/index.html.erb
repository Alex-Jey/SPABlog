<div class="container">
  <div class="jumbotron">
    <h1>Блог</h1>
    <p>тестовое задание</p>
  </div>
  <div ng-controller="EventsCtrl">
    <div class="row">
      <div class="col-md-4">
        <input ng-change="filterEvents()" type="text" id="search" class="form-control" ng-model="search" placeholder="Введите фразу для поиска..." />
      </div>
      <div class="col-md-8">
        <form class="form-inline" ng-submit="addEvent()">
          <div class="form-group">
            <input type="text" class="form-control" name="title" placeholder="Заголовок" ng-model="event.title" />
          </div>
            <div class="form-group">
            <input type="text" class="form-control" name="description" placeholder="Описание" ng-model="event.description" />
          </div>
          <div class="form-group">
            <input type="text" class="form-control" name="category" placeholder="Категория" ng-model="event.category" />
          </div>
          <div class="form-group">
            <input type="text" class="form-control" name="tags" placeholder="Тэги" ng-model="event.tags" />
          </div>
            <div class="form-group">
            <input type="text" class="form-control" name="url" placeholder="URL" ng-model="event.url" />
          </div>
        
          <button type="submit" class="btn btn-primary">Add</button>
        </form>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <table class="table table-striped">
          <thead>
            <tr>
              <th ng-click="sortEvents('title', sorting.order)" ng-class="sorting.sort_by == 'title' ? 'text-underline' : ''" class="col-md-3">
                Заголовок
                <span ng-if="sorting.sort_by == 'title'" class="glyphicon glyphicon-chevron-{{order}}" aria-hidden="true"></span>
              </th>
              <th ng-click="sortEvents('description', sorting.order)" ng-class="sorting.sort_by == 'description' ? 'text-underline' :''" class="col-md-3">
                Описание
                <span ng-if="sorting.sort_by == 'description'" class="glyphicon glyphicon-chevron-{{order}}" aria-hidden="true"></span>
              </th>
              <th ng-click="sortEvents('category', sorting.order)" ng-class="sorting.sort_by == 'category' ? 'text-underline' : ''" class="col-md-2">
                Категория
                <span ng-if="sorting.sort_by == 'category'" class="glyphicon glyphicon-chevron-{{order}}" aria-hidden="true"></span>
              </th>
              <th ng-click="sortEvents('tags', sorting.order)" ng-class="sorting.sort_by == 'tags' ? 'text-underline' : ''" class="col-md-2">
                Тэги
                <span ng-if="sorting.sort_by == 'tags'" class="glyphicon glyphicon-chevron-{{order}}" aria-hidden="true"></span>
              </th>
                <th ng-click="sortEvents('url', sorting.order)" ng-class="sorting.sort_by == 'url' ? 'text-underline' : ''" class="col-md-2">
                URL
                <span ng-if="sorting.sort_by == 'url'" class="glyphicon glyphicon-chevron-{{order}}" aria-hidden="true"></span>
              </th>
              <th class="col-md-2">Действия</th>
            </tr>
          </thead>
          <tbody>
            <tr ng-repeat="event in events" ng-include="toggleForm(event)"></tr>
          </tbody>
        </table>
      </div>
    </div>
    <script type="text/ng-template" id="form">
      <td>
        <input ng-model="editing.title" type="text" class="form-control" name="title" />
      </td>
      <td>
        <input ng-model="editing.description" type="text" class="form-control" name="description" />
      </td>
      <td>
        <input ng-model="editing.category" type="text" class="form-control" name="category" />
      </td>
      <td>
        <input ng-model="editing.tags" type="text" class="form-control" name="tags" />
      </td>
          <td>
        <input ng-model="editing.url" type="text" class="form-control" name="url" />
      </td>
      <td>
        <button ng-click="hideForm()" class="btn btn-default btn-xs">Cancel</button>
        <button ng-click="updateEvent($index)" class="btn btn-success btn-xs">Save</button>
      </td>
    </script>
    <script type="text/ng-template" id="row">
      <td>
        <span>{{event.title}}</span>
      </td>
      <td>
        <span>{{event.description}}</span>
      </td>
      <td>
        <span>{{event.category}}</span>
      </td>
      <td>
        <span>{{event.tags}}</span>
      </td>
      <td>
        <span>{{event.url}}</span>
      </td>
      <td>
        <button ng-click="editEvent(event)" class="btn btn-primary btn-xs">Edit</button>
        <button ng-click="destroyEvent(event, $index)" class="btn btn-danger btn-xs">Destroy</button>
      </td>
    </script>
  </div>
</div>


